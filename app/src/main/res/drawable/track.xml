<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/light_gray"/>
            <size
                android:height="50dp"
                android:width="85dp"/>
            <corners
                android:radius="20dp"/>
        </shape>

    </item>

    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/light_gray"/>
            <size
                android:height="50dp"
                android:width="100dp"/>
            <corners
                android:radius="20dp"/>
        </shape>

    </item>

</selector>