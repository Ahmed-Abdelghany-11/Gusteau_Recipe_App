<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="cardBackground" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="textColor" >
        <item name="textFillColor">@color/black</item>
    </style>
    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp" />

    <style name="BarTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="NavTheme">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/lightGreen</item> // icon color
        <item name="itemTextColor">@color/black</item> // text color
    </style>

    <style name="FloatTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/lightGreen</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/lightGreen</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CircularShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="OptionMenu" parent="android:TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fieldCorners" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxStrokeColor">@color/lightGreen</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="indicatorColor">@color/gray</item>
        <item name="indicatorSize">2dp</item>
    </style>



</resources>