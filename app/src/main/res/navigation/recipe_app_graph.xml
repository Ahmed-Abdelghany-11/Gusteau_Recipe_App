<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_app_graph"
    android:label="Home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.recipeapp.home.home.view.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.recipeapp.view.recipe.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="idMeal"
            app:argType="string"
            android:defaultValue='"2"' />
    </fragment>

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.recipeapp.home.aboutUs.view.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.recipeapp.view.auth.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.recipeapp.home.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <action
        android:id="@+id/action_global_to_homeFragment"
        app:destination="@id/homeFragment" />
</navigation>